<% if user_signed_in? %>
<nav class="navbar is-fixed-top px-4" role="navigation" aria-label="main navigation">
    <div class="navbar-brand">
        <%= link_to root_url, class: "navbar-item" do %>
        <%= image_tag "logo.png", alt: "Yart Logo", height: "40" %>
        <% end %>
    </div>

    <div id="navbarBasicExample" class="navbar-menu">
        <div class="navbar-start">
            <%= link_to "Home", root_url, class: "navbar-item #{is_active_link(root_url)}" %>
            <%= link_to "Profile", current_user_path, class: "navbar-item is-hidden-mobile #{is_active_link(current_user_path)}" %>
            <%= link_to "Settings", edit_user_registration_path, class: "navbar-item is-hidden-mobile #{is_active_link(edit_user_registration_path)}" %>
        </div>

        <div class="navbar-end">
            <div class="navbar-item">
                <div class="buttons">
                    <%= link_to(
                        new_project_url,
                        class: "button is-primary"
                    ) do %>
                    <strong>New project</strong>
                    <% end %>
                </div>
            </div>

            <div class="navbar-item has-dropdown is-hoverable">
                <a class="navbar-link">
                    <%= current_user.name %>
                </a>

                <div class="navbar-dropdown is-right">
                    <%= link_to "Profile", current_user_path, class: "navbar-item is-hidden-mobile"  %>
                    <%= link_to "Settings", edit_user_registration_path, class: "navbar-item is-hidden-mobile"  %>
                    <hr class="navbar-divider">
                    <%= link_to('Logout', destroy_user_session_path, method: :delete, class: "navbar-item") %>
                </div>
            </div>
        </div>
    </div>
</nav>
<% end %>
