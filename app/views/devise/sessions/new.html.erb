<section>
    <div>
        <div class="container has-text-centered">
            <div class="column">
                <div class="box">
                    <figure class="avatar">
                        <%= image_tag "logo-circle.png" %>
                    </figure>
                    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                        <div class="notification is-danger"><%= alert %><%= devise_error_messages! %></div>
                        <div class="field">
                            <div class="control">
                                <%= f.email_field :email, autocomplete: "email", class:"input is-large", placeholder: "Email" %>
                            </div>
                        </div>

                        <div class="field">
                            <div class="control">
                                <%= f.password_field :password, autocomplete: "off", class:"input is-large", placeholder: "Password" %>
                            </div>
                        </div>
                        <% if devise_mapping.rememberable? -%>
                            <div class="field is-hidden-mobile">
                                <label class="checkbox">
                                    <%= f.check_box :remember_me %>
                                        <%= f.label :remember_me %>
                                </label>
                            </div>
                            <% end -%>
                                <%= f.submit "Log in", class:"button is-block is-primary is-large is-fullwidth" %>
                    <% end %>
                    <br />
                    <p class="has-text-grey">
                        <%= render "devise/shared/links" %>
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>

